{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "noEmit": true,
  },
  "exclude": [
    "node_modules"
  ]
}